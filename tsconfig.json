{
  "include": ["./**/*"],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "typeRoots": ["./typings"],
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      "assets/*": ["static/assets/*"]
    }
  }
}
